    "version": "0.2.0",
    "configurations": [
        {
            "name": "API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Skornel02.ETR.Api/bin/Debug/net8.0/Skornel02.ETR.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Skornel02.ETR.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "WPF",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Skornel02.ETR.Desktop/bin/Debug/net8.0-windows/Skornel02.ETR.Desktop.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Skornel02.ETR.Desktop",
            "stopAtEntry": false,
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}